%li.anuncio
  .thumbnail
    =link_to(image_tag(anuncio.main_image(:original), :class => 'img-rounded'), city_anuncio_url(anuncio))
    %h3=link_to(truncate(anuncio.title.capitalize, :length => 40, :separator => ' '), city_anuncio_url(anuncio))
    .price
      -if anuncio.price.blank?
        Sin Precio
      -else
        =number_to_currency(anuncio.price, :precision => 0)
