%ul.col-md-4
  -if !@anuncio.price.blank?
    %li.well.precio.well-sm
      %span=number_to_currency(@anuncio.price)
  -if !@anuncio.moto_perk.km.blank?
    %li.well.well-sm
      %h3 km
      %span=number_with_precision(@anuncio.moto_perk.km, precision: 0, delimiter: ',')
  -if !@anuncio.moto_perk.cc.blank?
    %li.well.well-sm
      %h3 cc
      %span=@anuncio.moto_perk.cc

%ul.col-md-4
  -if !@anuncio.moto_perk.brand.nil?
    %li.well.well-sm
      %h3 marca
      %span=@anuncio.moto_perk.brand.name
  -if !@anuncio.moto_perk.year.blank?
