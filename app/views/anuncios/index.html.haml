-content_for :breadcrumb do
  .breadcrumb
    %li
      =link_to('Inicio', root_url)
      %span.divider /
    -if @city
      %li
        =link_to(@city.name, '/' + @city.url_name)
        %span.divider /
    -if @category and @category.parent
      %li
        =link_to(@category.parent.name, @category.parent.name.parameterize )
        %span.divider /

    -if @category
      %li.active
        =@category.name




%h1 Anuncios
-if @category.blank?
  #anuncios_container
    -@anuncios.each do |anuncio|
      =render anuncio
-else
  %ul#anuncio_list.list-group
    -@anuncios.each do |anuncio|
      %li.list-group-item=render 'anuncio_list', :anuncio => anuncio



