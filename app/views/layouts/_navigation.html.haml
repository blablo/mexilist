= link_to image_tag('mexilist.png'), root_path, :class => 'brand'
%ul.nav.nav-collapse.collapse.navbar-responsive-collapse
  - if user_signed_in?
    %li
      .btn-group
        %button.btn.btn-default{:type => "button"}=current_user.name
        %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
          %span.caret
        %ul.dropdown-menu
          %li=link_to "Editar Cuenta", edit_user_registration_path
          %li.divider
          %li=link_to 'Salir', destroy_user_session_path, :method=>'delete'
    %li
      =button_to('Mis Anuncios', mis_anuncios_anuncios_path, :class => 'btn btn-primary', :method => :get ) 

    - if current_user.has_role? :admin
      %li
        = link_to 'Admin', users_path
  - else
    %li=link_to 'Registrar', '#', :class => 'facebook'
