!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Mexilist"
      %meta{:content => content_for?(:description) ? yield(:description) : "Mexilist", :name => "description"}
        = stylesheet_link_tag "http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    #fb-root
    :javascript
      window.fbAsyncInit = function() {
      FB.init({
      appId : "#{ENV['facebook_app_id']}",
      status : true, // check login status
      cookie : true, // enable cookies to allow the server to access the session
      xfbml : true // parse XFBML
      });
      };
      (function(d) {
      var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
      js = d.createElement('script'); js.id = id; js.async = true;
      js.src = "//connect.facebook.net/en_US/all.js";
      d.getElementsByTagName('head')[0].appendChild(js);
      }(document));


    %header
      %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
        = render 'layouts/navigation'



    #main{:role => "main"}
      #left_banner.hidden-xs
        %h4 Ciudades
        %ul
          -Metropoly.all.each do |metro|
            %li=link_to(metro.name, metro.url_name)
      #right_banner.hidden-xs
        :javascript
          <!--
          google_ad_client = "ca-pub-9284427016001944";
          /* mexilist */
          google_ad_slot = "5065937288";
          google_ad_width = 120;
          google_ad_height = 600;
          //-->

        %script{:type => "text/javascript", :src => "http://pagead2.googlesyndication.com/pagead/show_ads.js"}


      #main_content.container
        .content
          =yield(:breadcrumb)
          = render 'layouts/messages'
          = yield
    %footer
      Mexilist
    / ! end of .container
    / ! end of #main

#login_modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title Registrate
      .modal-body
        %button.btn.btn-primary.btn-lg.facebook Conectar con Facebook
      .modal-footer

